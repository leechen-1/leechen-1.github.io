
*{
	margin: 0;
	padding: 0;
}

a{
	text-decoration: none;
}
body{
	font-family: "微软雅黑";
	font-size: 14px;
}
.left{
	float: left;
}
.right{
	float: right;
}
#header{
	background-color: #191D39;
}
.wrap{
	width: 1000px;
	margin: 0 auto;
	overflow: hidden;
}
#header h1{
	padding: 10px 0 0 20px;
	margin-right: 48px;
}
#header #logo a{
	display: block;
	width: 157px;
	height: 35px;
	background: url(../images/logo.png);
	text-indent: -9999px;
}
#header #nav a{
	display: inline-block;
	width: 85px;
	height: 58px;
	line-height: 58px;
	text-align: center;
	border-right: 1px solid #252947;
	color: #818496;
}
#header #nav a:hover{
	color: #e2e4ed;
}
#header #nav .current{
	background-color: #252947;
	color: #e2e4ed;
	border-left: 1px solid #252947;
	border-right: 1px solid #252947;
}
#header #nav .join{
	width: 98px;
	height: 32px;
	line-height: 32px;
	background-color: #37B873;
	border: 1px solid #3aca7a;
	border-radius: 3px;
	color: #fff;
	margin-left: 9px;
}
#header #nav .join:hover{
	color: #fff;
	background-color: #2BA364;
	transition: background-color 0.2s linear 0s;
}
#header #lang a{
	line-height: 58px;
	color: #444866;
}
#header #lang #cn{
	color: #38b774;
	margin-right: 10px;
}
#header #lang #en:hover{
	color: #38b774;
}
.banner{
	width: 100%;
	height: 254px;
	background: url("../images/aboutbanner.jpg") no-repeat center;
}
.area{
	width: 1000px;
	margin: 0 auto;
}
.area .location{
	width: 1000px;
	height: 70px;
	border-bottom: 1px solid #c7d6e5;
}
.area .location .game_t{
	position: relative;
	top: 20px;
	height: 29px;
	background: url("../images/location.png") no-repeat 0 -44px;
}
.location .game_z{
	line-height: 29px;
	font-size: 20px;
	color: #444866;
	padding-left: 30px;
	font-weight: bold;
}
.location .qlink{
	width: 168px;
	height: 20px;
	float: right;
}
.area .location .qlink a{
	display: inline-block;
	vertical-align: middle;
	text-decoration: none;
	color: #444866;
	cursor: pointer;
	font: 10px "微软雅黑";
}
.qlink a.home{
	width: 20px;
	height: 20px;
	background: url("../images/home.png") no-repeat center 3px;
}
.qlink em{
	display: inline-block;
	vertical-align: middle;
	background: url("../images/icon.png") no-repeat 0 -150px;
	width: 4px;
	height: 8px;
	line-height: 8px;
	margin: 0 4px;
}
.qlink p{
	font: 10px "微软雅黑";
	float: right;
	line-height: 22px;
	color: #444866;
}
.show{
	width: 1000px;
	margin: 0 auto;
}
.show .gleft{
	width: 230px;
	height: 400px;
	margin-top: 40px;
	float: left;
}
.show .gleft .gnav{
	list-style: none;
	margin: 0;
	padding: 0;
}
.gleft .gnav li{
	border-bottom: 1px solid #cad6e1;
	display: list-item;
}
.gleft .gnav li.current a{
	color: #38b774;
}
.gleft .gnav li.current h3{
    background: url("../images/arrow.png") no-repeat right center;
    font-size: 1.333em;
}
.gleft .gnav li a{
	display: block;
    padding: 15px 0;
    color: #444866;
    font-family: "微软雅黑";
    text-decoration: none;
    font-size: 13px;
}
.gleft .gnav li em{
	font-style: normal;
}
.gleft .gnav a:hover{
	color: #38b774;
}
.show .gright{
	float: right;
    width: 732px;
    padding-top: 40px;
}	
.gright .about{
	 color: #444866;
}
.gright .about p{
	text-indent: 2em;
    margin-bottom: 30px;
    line-height: 2.4;
    font-size: 1.166em;
    font-size: 13.5px;
    font-family: "微软雅黑";
}
.backtop{
	width: 68px;
	height: 29px;
	position: fixed;
	right: 14px;
	bottom: 74px;
}
.backtop a{
	display: block;
	width: 68px;
	height: 29px;
	background: url("../images/top.png") no-repeat 0 -40px;
}
.backtop a:hover{
	background: url("../images/top.png") no-repeat 0 0;
}
.footer{
	width: 100%;
	height: 191px;
	background-color: #191d3a;
	position: absolute;
	top: 1260px;
	z-index: -1;
}
.footer .f_center{
	width: 1000px;
	height: 191px;
	margin: 0 auto;
}
.f_center p{
	width: 1000px;
	height: 50px;
	color:#6c6e7e ;
	padding-top: 10px;
	font-size: 12px;
}
.f_center a{
	width: 1000px;
	height: 50px;
	color:#6c6e7e;
	font-size: 12px;
	line-height: 50px;
	text-decoration: none;
}
.f_center .c3{
	line-height: 50px;
}
.f_center .c3 a{
	position: absolute;
}
a:hover{
	color: #FFFFFF;
}